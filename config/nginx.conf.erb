daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
  use epoll;
  accept_mutex on;
  worker_connections 2048;
}

http {
  gzip on;
  gzip_comp_level 6;
  gzip_min_length 512;
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  gzip_vary on;
  gzip_proxied any;

  server_tokens off;

  access_log logs/access.log;
  error_log stderr error;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  #Must read the body in 5 seconds.
  client_body_timeout 5;

  server {
    listen <%= ENV["PORT"] %> reuseport;
    charset UTF-8;
    port_in_redirect off;
    keepalive_timeout 5;
    root public_html/;

    resolver 172.16.0.23 8.8.8.8;

    if ($http_x_forwarded_proto != "https") {
      return 301 https://$host$request_uri;
    }

    # need this b/c setting $fallback to =404 will try #{root}=404 instead of returning a 404
    location @404 {
      return 404;
    }

    location <%= ENV['MADETECH_PATH'] %> {
      proxy_pass <%= ENV['MADETECH_URL'] %>;
      proxy_ssl_server_name on;
      proxy_redirect <%= ENV['MADETECH_URL'] %> <%= ENV['MADETECH_PATH'] %>;
    }

    location <%= ENV['MADETECH_BLOG_PATH'] %> {
      proxy_pass <%= ENV['MADETECH_BLOG_URL'] %>;
      proxy_ssl_server_name on;
      proxy_redirect <%= ENV['MADETECH_BLOG_URL'] %> <%= ENV['MADETECH_BLOG_PATH'] %>;
    }
  }
}
